{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd backend && pnpm install && pnpm run build"
      }
    },
    {
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd frontend && pnpm install && pnpm run build",
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/main.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}